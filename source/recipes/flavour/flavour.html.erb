<% content_for(:title) do %>Cocktails | Recipes | Flavour | <%= flavour.label %><% end %>
<h1>Recipes with a flavour of <%= flavour.label %></h1>

<% recipes = Recipe.with_characteristic(flavour).alpha_order %>
<nav class="">
  <ol>
    <% recipes.all.each do |recipe| %>
      <li><%= link_to recipe.title, recipe_path(recipe) %></li>
    <% end %>
  </ol>
</nav>
